# Copy to .env and replace placeholder values.
GEMINI_API_KEY=your-gemini-api-key
TRANSCRIPTION_PROVIDER=gemini
# Override default model if desired (optional)
TRANSCRIPTION_MODEL=models/gemini-1.5-flash-latest
# Timeout in milliseconds before aborting a transcription request (optional)
TRANSCRIPTION_TIMEOUT_MS=90000
# Custom directory for generated transcripts (optional)
TRANSCRIPTION_OUTPUT_DIR=
# MediaRecorder timeslice for audio chunks in ms
TRANSCRIPTION_CHUNK_TIMESLICE_MS=200
# Max chunk size accepted over IPC (bytes)
TRANSCRIPTION_MAX_CHUNK_BYTES=131072

# Inject silence frames after this idle duration (ms)
TRANSCRIPTION_SILENCE_FILL_MS=200
# Duration of each injected silence frame (ms)
TRANSCRIPTION_SILENCE_FRAME_MS=20
