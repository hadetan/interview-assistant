{
  "name": "poc-screen-and-audio-capture",
  "version": "1.0.0",
  "description": "Screen and audio capture recorder.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://127.0.0.1:5173 && cross-env ELECTRON_START_URL=http://127.0.0.1:5173 electron .",
    "start": "electron .",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "vite build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "productName": "ScreenAudioCapture",
  "build": {
    "appId": "com.example.screenaudiocapture",
    "files": [
      "electron/**",
      "dist/renderer/**",
      "config/**",
      "transcription/**",
      "utils/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "./.env",
        "to": ".env",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.video",
      "artifactName": "ScreenAudioCapture-${version}-mac.${ext}",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "ScreenAudioCapture needs microphone or loopback access to include audio in recordings.",
        "NSCameraUsageDescription": "ScreenAudioCapture requests screen access to capture display content."
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Video"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "ScreenAudioCapture-${version}-win.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false
    }
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "vite": "^5.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.0"
  }
}
